{
   "kind": "List",
   "apiVersion": "v1",
   "metadata": {
      "name": "springboot-sti"
   },
   "items": [
      {
         "kind": "BuildConfig",
         "apiVersion": "v1",
         "metadata": {
            "name": "springboot-sti"
         },
         "spec": {
            "triggers": [
               {
                  "type": "GitHub",
                  "github": {
                     "secret": "secret"
                  }
               },
               {
                  "type": "Generic",
                  "generic": {
                     "secret": "secret"
                  }
               },
               {
                  "type": "ImageChange",
                  "imageChange": {}
               }
            ],
            "source": {
               "type": "Git",
               "git": {
                  "uri": "http://lxeuprdgit01.int.hlg.de/hermes/kundenservice",
                  "ref": "master"
               },
               "contextDir": ""
            },
            "strategy": {
               "type": "Docker",
               "dockerStrategy": {
                  "from": {
                     "kind": "ImageStreamTag",
                     "name": "centos:centos7"
                  }
               }
            },
            "output": {
               "to": {
                  "kind": "ImageStreamTag",
                  "name": "springboot-sti:latest"
               }
            },
            "resources": {}
         }
      },
      {
         "kind": "ImageStream",
         "apiVersion": "v1",
         "metadata": {
            "name": "centos"
         },
         "spec": {
            "dockerImageRepository": "library/centos:centos7"
         }
      },
      {
         "kind": "ImageStream",
         "apiVersion": "v1",
         "metadata": {
            "name": "springboot-sti"
         },
         "spec": {
            "dockerImageRepository": "",
            "tags": [
               {
                  "name": "latest",
                  "annotations": {
                     "description": "Spring Boot STI image",
                     "iconClass": "icon-jboss",
                     "tags": "builder,springboot,java,,",
                     "supports": "springboot,java:8,:3,:2.6",
                     "version": "1.0"
                  }
               }
            ]
         }
      },
      {
         "kind": "Template",
         "apiVersion": "v1",
         "metadata": {
            "name": "springboot-sti",
            "annotations": {
               "description": "Spring Booth sti",
               "iconClass": "icon-jboss",
               "tags": "instant-app,springboot,,java"
            }

         },
         "labels": {
            "application": "springboot",
            "createdBy": "template-springboot"
         },
         "parameters": [
            {
               "description": "The name for the application.",
               "name": "APPLICATION_NAME",
               "value": "",
               "displayName": "Application name",
               "required": true
            },
            {
               "description": "Custom hostname for service routes.  Leave blank for default hostname, e.g.: <application-name>.<project>.<default-domain-suffix>",
               "name": "APPLICATION_HOSTNAME",
               "displayName": "Application hostname"
            },
            {
               "description": "Git source URI for application",
               "name": "GIT_URI",
               "value": ""
            },
            {
               "description": "Git branch/tag reference",
               "name": "GIT_REF",
               "value": "master"
            },
            {
               "description": "Git Directory",
               "name": "CONTEXT_DIR",
               "value": ""
            },
            {
               "description": "Github trigger secret",
               "name": "GITHUB_TRIGGER_SECRET",
               "from": "[a-zA-Z0-9]{8}",
               "generate": "expression"
            },
            {
               "description": "Generic build trigger secret",
               "name": "GENERIC_TRIGGER_SECRET",
               "from": "[a-zA-Z0-9]{8}",
               "generate": "expression"
            }
         ],
         "objects": [
            {
               "kind": "BuildConfig",
               "apiVersion": "v1",
               "metadata": {
                  "name": "${APPLICATION_NAME}"
               },
               "spec": {
                  "triggers": [
                     {
                        "type": "GitHub",
                        "github": {
                           "secret": "${GITHUB_TRIGGER_SECRET}"
                        }
                     },
                     {
                        "type": "Generic",
                        "generic": {
                           "secret": "${GENERIC_TRIGGER_SECRET}"
                        }
                     },
                     {
                        "type": "ImageChange",
                        "imageChange": {}
                     }
                  ],
                  "source": {
                     "type": "Git",
                     "git": {
                        "uri": "${GIT_URI}",
                        "ref": "${GIT_REF}"
                     },
                     "contextDir": "${CONTEXT_DIR}"
                  },
                  "strategy": {
                     "type": "Source",
                     "sourceStrategy": {
                        "from": {
                           "kind": "ImageStreamTag",
                           "name": "springboot-sti:latest"
                        }
                     }
                  },
                  "output": {
                     "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}:latest"
                     }
                  },
                  "resources": {}
               }
            },
            {
               "kind": "ImageStream",
               "apiVersion": "v1",
               "metadata": {
                  "name": "${APPLICATION_NAME}"
               },
               "spec": {
                  "dockerImageRepository": "",
                  "tags": [
                     {
                        "name": "latest"
                     }
                  ]
               }
            },
            {
               "kind": "DeploymentConfig",
               "apiVersion": "v1",
               "metadata": {
                  "name": "${APPLICATION_NAME}"
               },
               "spec": {
                  "strategy": {
                     "type": "Rolling",
                     "rollingParams": {
                        "updatePeriodSeconds": 1,
                        "intervalSeconds": 1,
                        "timeoutSeconds": 600
                     },
                     "resources": {}
                  },
                  "triggers": [
                     {
                        "type": "ConfigChange"
                     },
                     {
                        "type": "ImageChange",
                        "imageChangeParams": {
                           "automatic": true,
                           "containerNames": [
                              "${APPLICATION_NAME}"
                           ],
                           "from": {
                              "kind": "ImageStreamTag",
                              "name": "${APPLICATION_NAME}:latest"
                           }
                        }
                     }
                  ],
                  "replicas": 1,
                  "selector": {
                     "deploymentconfig": "${APPLICATION_NAME}"
                  },
                  "template": {
                     "metadata": {
                        "labels": {
                           "deploymentconfig": "${APPLICATION_NAME}"
                        }
                     },
                     "spec": {
                        "containers": [
                           {
                              "name": "${APPLICATION_NAME}",
                              "image": "${APPLICATION_NAME}",
                              
			      "env": [                     
                     		 {
                              "name": "TZ",
                              "value": "Europe/Berlin"
                     		 }
			      ],
				"ports": [
                                 {
                                    "containerPort": 8080,
                                    "protocol": "TCP"
                                 }
                              ],
                              "livenessProbe": {
                                 "tcpSocket": {
                                    "port": 8080
                                 },
                                 "initialDelaySeconds": 1200,
                                 "timeoutSeconds": 30
                              },
                              "resources": {},
                              "terminationMessagePath": "/dev/termination-log",
                              "imagePullPolicy": "IfNotPresent",
                              "securityContext": {
                                 "capabilities": {},
                                 "privileged": false
                              }
                           }
                        ],
                        "restartPolicy": "Always",
                        "dnsPolicy": "ClusterFirst"
                     }
                  }
               }
            },
            {
               "kind": "Route",
               "apiVersion": "v1",
               "metadata": {
                  "name": "${APPLICATION_NAME}"
               },
               "spec": {
                  "host": "${APPLICATION_HOSTNAME}",
                  "to": {
                     "kind": "Service",
                     "name": "${APPLICATION_NAME}"
                  }
               }
            },
            {
               "kind": "Service",
               "apiVersion": "v1",
               "metadata": {
                  "name": "${APPLICATION_NAME}"
               },
               "spec": {
                  "ports": [
                     {
                        "name": "${APPLICATION_NAME}-http",
                        "port": 8080,
                        "targetPort": 8080
                     }
                  ],
                  "selector": {
                     "deploymentconfig": "${APPLICATION_NAME}"
                  },
                  "type": "ClusterIP",
                  "sessionAffinity": "None"
               }
            }
         ]
      }

   ]
}

